# BUTTONS

style "blackice-button" {
	#~ bg[NORMAL]		= "#282828"
	#~ bg[PRELIGHT]	= "#155F9C"
	#~ bg[ACTIVE]		= shade (0.85, @blackice-bg)
	#~ bg[SELECTED]	= shade (1.0, @blackice-selected-bg)  
	#~ bg[INSENSITIVE]	= shade (0.95, @blackice-bg)
	
	xthickness = 5
	ythickness = 4

	engine "pixmap"	{
		image {
			function        = FOCUS
			file			= "other/null.png"
			border			= {0,0,0,0}
			stretch			= TRUE
        }
		image {
			function		= BOX
			detail			= "buttondefault"
			recolorable		= TRUE
			file			= "button/button-default.svg"
			border			= {3,3,3,3}
			stretch			= TRUE      
		}
		image {
			function        = BOX
			state			= PRELIGHT
			shadow			= OUT
			recolorable		= TRUE
			file			= "button/button-prelight.png"
			border			= {4,4,4,4}
			stretch			= TRUE
        }
		image {
			function        = BOX
			state			= ACTIVE
			file			= "button/button-active.png"
			border			= {4,4,3,5}
			stretch			= TRUE
        }
        image {
			function        = BOX
			shadow			= IN
			state			= PRELIGHT
			overlay_file	= "button/button-active-prelight.png"
			overlay_border	= {4,4,3,5}
			overlay_stretch	= TRUE
        }
        image {
			function        = BOX
			state			= INSENSITIVE
			file			= "button/button-insensitive.png"
			border			= {3,3,3,3}
			stretch			= TRUE
        }
        image {
			function        = BOX
			file			= "button/button.png"
			border			= {3,3,3,3}
			stretch			= TRUE
        }
    }
}

