			stretch			= TRUE
			gap_side		= LEFT
		}

# close the gaps
		image {
			function			= BOX_GAP
			file				= "tab/notebook_bg.png" 
			border				= {1,1,1,1}
			stretch				= TRUE
			gap_file			= "tab/notebook_gap_horizontal.png"
