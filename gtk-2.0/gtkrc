			function			= SLIDER
			state           	= NORMAL
			file				= "other/null.png"
			border				= {0,0,0,0}
			stretch				= TRUE
			overlay_file		= "scale/scale-slider.svg"
			overlay_stretch		= FALSE
			orientation			= VERTICAL
		}
