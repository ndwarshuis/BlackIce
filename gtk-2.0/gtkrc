			stretch				= TRUE
			overlay_file		= "scale/scale-slider-insensitive.svg"
			overlay_stretch		= FALSE
			orientation			= VERTICAL
		}

# Function below removes ugly boxes
		image {
			function			= BOX
			file        		= "other/null.png"
			border      		= {0,0,0,0}
			stretch         	= TRUE
		}
	}
