style "blackice-scrollbar" {

	engine "pixmap"	{

# create invisible trough
		image {
			function		= BOX
			#~ recolorable		= TRUE
			detail			= "trough"
			file			= "scroll/scrollbar-trough.png"
			border			= {0,0,0,0}
			stretch			= TRUE
			orientation		= HORIZONTAL
		}
		image {
			function		= BOX
			#~ recolorable		= TRUE
			detail			= "trough"
			file			= "scroll/scrollbar-trough.png"
			border			= {0,0,0,0}
			stretch			= TRUE
			orientation		= VERTICAL
		}

# horizontal slider
		image {
			function		= SLIDER
			recolorable		= TRUE
			state			= NORMAL
			file			= "scroll/scrollbar.png"
			border			= {3,3,0,0}
			stretch			= TRUE
			orientation		= HORIZONTAL
		}
		image {
			function		= SLIDER
			recolorable		= TRUE
			state			= PRELIGHT
			file			= "scroll/scrollbar-prelight.png"
			border			= {3,3,0,0}
			stretch			= TRUE
			orientation		= HORIZONTAL
		}
		image {
			function		= SLIDER
			recolorable		= TRUE
			state			= ACTIVE
			file			= "scroll/scrollbar-prelight.png"
			border			= {3,3,0,0}
			stretch			= TRUE
			orientation		= HORIZONTAL
		}
		image {
			function		= SLIDER
			recolorable		= TRUE
			state			= INSENSITIVE
			file			= "scroll/scrollbar-insensitive.png"
			border			= {3,3,0,0}
			stretch			= TRUE
			orientation		= HORIZONTAL
		}

# vertical slider
		image {
			function		= SLIDER
			recolorable		= TRUE
			state			= NORMAL
			file			= "scroll/scrollbar-vertical.png"
			border			= {0,0,3,3}
			stretch			= TRUE
			orientation		= VERTICAL
		}
		image {
			function		= SLIDER
			recolorable		= TRUE
			state			= PRELIGHT
			file			= "scroll/scrollbar-vertical-prelight.png"
			border			= {0,0,3,3}
			stretch			= TRUE
			orientation		= VERTICAL
		}
		image {
			function		= SLIDER
			recolorable		= TRUE
			state			= ACTIVE
			file			= "scroll/scrollbar-vertical-prelight.png"
			border			= {0,0,3,3}
			stretch			= TRUE
			orientation		= VERTICAL
		}
		image {
			function		= SLIDER
			recolorable		= TRUE
			state			= INSENSITIVE
			file			= "/scroll/scrollbar-vertical-insensitive.png"
			border			= {0,0,3,3}
			stretch			= TRUE
			orientation		= VERTICAL
		}

# steppers would normally be here... (if we cared about them)
		#~ image {
			#~ function		= STEPPER
			#~ recolorable		= TRUE
			#~ state			= NORMAL
			#~ file			= "arrows/arrow-up.png"
			#~ stretch			= TRUE
			#~ arrow_direction	= UP
		#~ }
		#~ image {
			#~ function		= STEPPER
			#~ recolorable		= TRUE
			#~ state			= PRELIGHT
			#~ file			= "arrows/arrow-up.png"
			#~ stretch			= TRUE
			#~ arrow_direction	= UP
		#~ }
		#~ image {
			#~ function		= STEPPER
			#~ recolorable		= TRUE
			#~ state			= ACTIVE
			#~ file			= "arrows/arrow-up.png"
			#~ stretch			= TRUE
			#~ arrow_direction	= UP
		#~ }
		#~ image {
			#~ function		= STEPPER
			#~ recolorable		= TRUE
			#~ state			= INSENSITIVE
			#~ file			= "arrows/arrow-up.png"
			#~ stretch			= TRUE
			#~ arrow_direction	= UP
		#~ }
		
# clean up...
		image {
			function        = BOX
			recolorable     = TRUE
			state           = NORMAL
			file            = "other/null.png"
			border          = {0,0,0,0}
			stretch         = TRUE
		}
		image {
			function        = BOX
			recolorable     = TRUE
			state           = PRELIGHT
			file            = "other/null.png"
			border          = {0,0,0,0}
			stretch         = TRUE
			orientation     = HORIZONTAL
		}
		image {
			function        = BOX
			recolorable     = TRUE
			state           = ACTIVE
			file            = "other/null.png"
			border          = {0,0,0,0}
			stretch         = TRUE
		}
		image {
			function        = BOX
			recolorable     = TRUE
			state           = INSENSITIVE
			file            = "other/null.png"
			border          = {0,0,0,0}
			stretch         = TRUE
		}
	}
}

