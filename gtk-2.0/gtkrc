			gap_end_file		= "tab/tab-top-active-gap-end.png"
			gap_end_border		= {1,1,2,2}
			gap_side			= TOP
		}
		image {
			function			= BOX_GAP
			file				= "tab/notebook_bg.png" 
			border				= {1,1,1,1}
			stretch				= TRUE
			gap_file			= "tab/notebook_gap_horizontal.png"
			gap_border			= {2,2,0,0}
			gap_start_file		= "tab/tab-top-active-gap-start.png"
			gap_start_border	= {3,3,3,3}
			gap_end_file		= "tab/tab-top-active-gap-end.png"
			gap_end_border		= {1,1,2,2}
			gap_side			= BOTTOM
		}
		image {
			function			= BOX_GAP
			file				= "tab/notebook_bg.png" 
			border				= {1,1,1,1}
			stretch				= TRUE
			gap_file			= "tab/notebook_gap_vertical.png"
			gap_border			= {0,0,2,2}
