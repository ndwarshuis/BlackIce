			#~ shadow				= IN		
		#~ }
		#~ image {
			#~ function 			= SHADOW
			#~ recolorable     	= TRUE
			#~ file				= "frame/frame.png"
			#~ border				= {1,1,1,1}
			#~ stretch				= TRUE
			#~ shadow				= OUT
		#~ }
        #~ image {
			#~ function			= SHADOW_GAP
			#~ file				= "frame/frame.png"
			#~ border				= {1,1,1,1}
			#~ stretch				= TRUE
			#~ gap_start_file		= "frame/top-gap-start.png"
			#~ gap_start_border	= {1,1,1,0}
			#~ gap_end_file		= "frame/top-gap-end.png"
			#~ gap_end_border		= {1,1,1,0}
			#~ gap_side			= TOP
			#~ shadow				= OUT		
		#~ }
